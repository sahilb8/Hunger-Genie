<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/dish.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <main>
                <% if (dishes.length > 0) { %>
                    <div class="grid">
                        <% for (let dish of dishes) { %>
                            <article class="card dish-item">
                                <header class="card__header">
                                    <h1 class="dish__title">
                                        <%= dish.title %>
                                    </h1>
                                </header>
                                <div class="card__image">
                                    <img src="<%= dish.imageUrl %>" alt="<%= dish.title %>">
                                </div>
                                <div class="card__content">
                                    <h2 class="dish__price">$
                                        <%= dish.price %>
                                    </h2>
                                    <p class="dish__description">
                                        <%= dish.description %>
                                    </p>
                                </div>
                                <div class="card__actions">
                                    <a href="/admin/edit-dish/<%= dish._id %>?edit=true" class="btn">Edit</a>
                                    <form action="/admin/delete-dish" method="POST">
                                        <input type="hidden" value="<%= dish._id %>" name="dishId">
                                        <button class="btn" type="submit">Delete</button>
                                    </form>

                                </div>
                            </article>
                            <% } %>
                    </div>
                    <% } else { %>
                        <h1>No dishs Found!</h1>
                        <% } %>
            </main>
            <%- include('../includes/end.ejs') %>